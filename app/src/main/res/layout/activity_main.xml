<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49C39E"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="164dp"

            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:background="#49C39E"
            app:lottie_fileName="animations/32-camera.json"/>

        <TextView
            android:layout_width  = "wrap_content"
            android:layout_height = "wrap_content"
            android:textSize      = "28sp"
            android:fontFamily      = "sans-serif-medium"
            android:textColor     = "#212121"
            android:text          = "Permissions Required"
            android:layout_gravity= "center"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:layout_width  = "wrap_content"
            android:layout_height = "wrap_content"
            android:textSize      = "18sp"
            android:fontFamily      = "sans-serif-light"
            android:textColor     = "#616161"
            android:text          = "The camera permission is required by the app."
            android:textAlignment="center"
            android:layout_gravity= "center"
            android:singleLine="false"
            android:gravity="left"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/grantBtn"
        android:layout_width  = "wrap_content"
        android:layout_height = "wrap_content"
        android:textSize      = "20sp"
        android:fontFamily      = "sans-serif-medium"
        android:textColor     = "#212121"
        android:text          = "GRANT"
        android:layout_gravity= "center|bottom"
        android:singleLine="true"
        android:gravity="center"
        android:padding="8dp"
        android:background="#80D2DE"
        android:layout_marginBottom="18dp"
        />

</FrameLayout>